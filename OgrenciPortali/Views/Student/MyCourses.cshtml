@using System.Security.Claims
@model Shared.DTO.MyCoursesDTO
@{
    ViewBag.Title = "Derslerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800">Derslerim</h1>
            <p class="text-muted mb-0">Seçmiş olduğunuz derslerin durumunu buradan takip edebilirsiniz.</p>
        </div>
        <a href="@Url.Action("Enroll", "Student")" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle-fill me-2"></i>Yeni Ders Seçimi Yap
        </a>
    </div>


    @if (Model != null && Model.Courses.Any())
    {
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-start-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col me-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Ders</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Summary.TotalCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="bi bi-collection-fill h2 text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-start-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col me-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Onaylanan</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.Summary.ApprovedCount Ders (@Model.Summary.ApprovedCredits Kredi)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="bi bi-patch-check-fill h2 text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-start-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col me-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Bekleyen</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.Summary.PendingCount Ders (@Model.Summary.PendingCredits Kredi)
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="bi bi-hourglass-split h2 text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-start-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col me-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Reddedilen</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Summary.RejectedCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="bi bi-x-circle-fill h2 text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="d-flex justify-content-center mb-4">
            <div class="btn-group shadow-sm" role="group" aria-label="Course Filters">
                <button type="button" class="btn btn-outline-primary active filter-btn" data-filter="all">Tümü</button>
                <button type="button" class="btn btn-outline-primary filter-btn" data-filter="Onaylandı">Onaylanan</button>
                <button type="button" class="btn btn-outline-primary filter-btn" data-filter="Bekliyor">Bekleyen</button>
                <button type="button" class="btn btn-outline-primary filter-btn" data-filter="Reddedildi">Reddedilen</button>
            </div>
        </div>


        <div class="row" id="coursesContainer">
            @foreach (var course in Model.Courses)
            {
                var statusClass = course.ApprovalStatusText == "Bekliyor" ? "warning" :
                    course.ApprovalStatusText.Contains("Onaylandı") ? "success" : "danger";
                var statusIcon = course.ApprovalStatusText == "Bekliyor" ? "hourglass-split" :
                    course.ApprovalStatusText == "Onaylandı" ? "check-circle-fill" : "x-circle-fill";

                <div class="col-xl-4 col-lg-6 mb-4 course-item" data-status="@course.ApprovalStatusText">
                    <div class="card shadow-sm h-100 course-card">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h6 class="mb-0 font-weight-bold text-primary">@course.CourseCode - @course.CourseName</h6>
                            <span class="badge bg-@statusClass">
                                <i class="bi bi-@statusIcon me-1"></i>@course.ApprovalStatusText
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-fill text-muted me-2" style="font-size: 1.2rem;"></i>
                                <p class="card-text mb-0">Öğretim Üyesi: @course.TeacherFullName</p>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-bookmark-star text-muted me-2" style="font-size: 1.2rem;"></i>
                                <p class="card-text mb-0"><strong>Kredi:</strong> @course.Credits</p>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-calendar3 text-muted me-2" style="font-size: 1.2rem;"></i>
                                <p class="card-text mb-0"><strong>Dönem:</strong> @course.SemesterName</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-clock-fill text-muted me-2" style="font-size: 1.2rem;"></i>
                                <p class="card-text mb-0"><strong>Program:</strong> @course.DayOfWeek @course.TimeSlot</p>
                            </div>
                            <p class="card-text text-muted small border-top pt-2 mt-2"><strong>Kayıt Tarihi:</strong> @course.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox-fill display-1 text-muted"></i>
            <h4 class="mt-4">Henüz Seçilmiş Dersiniz Bulunmuyor</h4>
            <p class="text-muted">Ders seçimi yapmak için aşağıdaki butonu kullanabilirsiniz.</p>
            <a href="@Url.Action("Enroll", "Student")" class="btn btn-lg btn-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>Ders Seçimine Başla
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filterButtons = document.querySelectorAll('.filter-btn');
            const courseItems = document.querySelectorAll('.course-item');
            const coursesContainer = document.getElementById('coursesContainer');

            filterButtons.forEach(button => {
                button.addEventListener('click', function () {
                    // Update active button state
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');

                    const filter = this.dataset.filter;
                    const filterText = this.textContent;
                    let visibleCount = 0;

                    courseItems.forEach(item => {
                        const status = item.dataset.status;
                        const shouldShow = (filter === 'all' || status === filter);

                        // Use a class to control visibility for smoother transitions
                        if (shouldShow) {
                            item.classList.remove('d-none');
                            visibleCount++;
                        } else {
                            item.classList.add('d-none');
                        }
                    });

                    // If a "no courses found" message exists, remove it
                    const existingAlert = coursesContainer.querySelector('.no-courses-alert');
                    if (existingAlert) {
                        existingAlert.remove();
                    }

                    // If no courses match the filter, show a message
                    if (visibleCount === 0) {
                        const alert = document.createElement('div');
                        alert.className = 'col-12 text-center py-5 no-courses-alert';
                        alert.innerHTML = `
                        <i class="bi bi-search display-4 text-muted"></i>
                        <h5 class="mt-3">'${filterText}' statüsünde ders bulunamadı.</h5>
                    `;
                        coursesContainer.appendChild(alert);
                    }
                });
            });
        });
    </script>
} 